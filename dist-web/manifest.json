  "shortcuts": [
    {
      "name": "查看地图",
      "short_name": "地图",
      "description": "打开地图视图查看所有照片标记",
      "url": "/map",
      "icons": [
        {
          "src": "/images/shortcut-map.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "添加照片",
      "short_name": "添加",
      "description": "添加新的照片到地图",
      "url": "/add",
      "icons": [
        {
          "src": "/images/shortcut-add.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "照片库",
      "short_name": "照片",
      "description": "浏览所有照片",
      "url": "/photos",
      "icons": [
        {
          "src": "/images/shortcut-photos.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "搜索",
      "short_name": "搜索",
      "description": "搜索照片和位置",
      "url": "/search",
      "icons": [
        {
          "src": "/images/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/jpeg", "image/jpg", "image/png", "image/webp", "image/gif"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "image/jpeg": [".jpg", ".jpeg"],
        "image/png": [".png"],
        "image/webp": [".webp"],
        "image/gif": [".gif"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+photomap",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://github.com/your-repo/photo-map/releases"
    },
    {
      "platform": "mac",
      "url": "https://github.com/your-repo/photo-map/releases"
    }
  ]
}